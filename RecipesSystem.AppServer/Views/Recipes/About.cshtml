@model IEnumerable<RecipesSystem.AppServer.Models.Recipe>
@{
    ViewData["Title"] = "About";
    Layout = "~/Views/Shared/LustigLayout.cshtml";
}


<main class="page">
    <section class="about-page">
        <article>
            <h2>I'm baby coloring book poke taxidermy</h2>
            <p>
                Taxidermy forage glossier letterpress heirloom before they sold out
                you probably haven't heard of them banh mi biodiesel chia.
            </p>
            <p>
                Taiyaki tumblr flexitarian jean shorts brunch, aesthetic salvia
                retro.
            </p>
        </article>
        <!-- needs fixes -->
        <img src="~/assets/about.jpeg"
             alt="Person Pouring Salt in Bowl"
             class="img about-img" />
    </section>
    <section class="featured-recipes">
        <h5 class="featured-title">Look At This Awesomesouce!</h5>
        <div class="recipes-list">
            @{
                int count = 0;
                @foreach(var item in Model)//הצגת 3 מתכונים הכי מומלצים
                 {
                if(count<3)
                {
                 <a href="@Url.Action("SingleRecipe", "Recipes",new{id=item.Id}) " class="recipe">
                    <img src="@Url.Content(@item.ImageURL)" @*יציג את אחת התמונות של המתכונים*@
                     class="img recipe-img"
                     alt="" />
                    <h5> @Html.DisplayFor(modelItem => item.Description)</h5>
                    <p>Prep : @Html.DisplayFor(modelItem => item.TimeToMake) | Cook : @Html.DisplayFor(modelItem => item.CookingTime)</p>
                 </a>
                 count++;//לא יאפשר יותר מ3 מתכוניפ שיוצגו באודות
               }
                }

                }
            
            

            
        
        </div>
    </section>
</main>

